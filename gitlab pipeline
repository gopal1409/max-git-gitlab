stages:
    - build
    - test
build the car:
    stage: build
    script:
        - mkdir build 
        - cd build
        - touch car.txt 
        - echo "chasis" > car.txt
        - echo "engine" > car.txt 
        - echo "wheels" > car.txt  
    artifacts:
        paths:
            - build/
test the car: 
    stage: test
    script:
        - cd build
        - grep "chasis" car.txt
        - grep "engine" car.txt
        - grep "wheels" car.txt
